						.addComponent(jobDescriptionLabel)
						.addComponent(jobDescriptionArea)
						.addComponent(postJobButton)
						
						)
				);

		layout.linkSize(SwingConstants.HORIZONTAL, new java.awt.Component[] {postJobButton, jobTitleField});
